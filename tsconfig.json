{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"declaration": false,
		"esModuleInterop": true,
		"lib": ["es2019", "dom"],
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "dist",
		"useUnknownInCatchVariables": false,
		"sourceMap": true,
		"target": "es2019"
	},
	"include": ["src/**/**.ts"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
